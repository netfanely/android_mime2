<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="buttonStyle">@style/boton_uno</item>
    </style>
    <style name="MegaTexto" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sourcesanspro_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorMegaTexto</item>
    </style>
    <style name="boton_uno" parent="android:Widget.Button">
        <item name="android:textColor">@color/colorBotonTexto</item>
        <item name="android:background">@color/colorBotonFondo</item>
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
